<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.findsheep.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/sheepLogoImg"
        android:layout_width="175dp"
        android:layout_height="105dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/loginTxt"
        app:layout_constraintLeft_toLeftOf="@+id/loginTxt"
        app:layout_constraintRight_toRightOf="@+id/loginTxt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433"
        app:srcCompat="@drawable/sheep_logo" />

    <EditText
        android:id="@+id/loginTxt"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="Login"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/senhaPsswd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/senhaPsswd"
        app:layout_constraintRight_toRightOf="@+id/senhaPsswd" />

    <EditText
        android:id="@+id/senhaPsswd"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/economizarBtn"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="@+id/economizarBtn"
        app:layout_constraintRight_toRightOf="@+id/economizarBtn"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

    <Button
        android:id="@+id/economizarBtn"
        android:layout_width="214dp"
        android:layout_height="48dp"
        android:layout_marginBottom="3dp"
        android:onClick="onClickEconomizarBtn"
        android:text="Economizar"
        app:layout_constraintBottom_toTopOf="@+id/criarContaBtn"
        app:layout_constraintLeft_toLeftOf="@+id/criarContaBtn"
        app:layout_constraintRight_toRightOf="@+id/criarContaBtn" />

    <Button
        android:id="@+id/criarContaBtn"
        android:layout_width="212dp"
        android:layout_height="48dp"
        android:layout_marginBottom="71dp"
        android:onClick="onClickCriarContaBtn"
        android:text="Criar conta"
        app:layout_constraintBottom_toTopOf="@+id/esqueciSenhaTxtVw"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintLeft_toLeftOf="@+id/esqueciSenhaTxtVw"
        app:layout_constraintRight_toRightOf="@+id/esqueciSenhaTxtVw" />

    <TextView
        android:id="@+id/esqueciSenhaTxtVw"
        android:layout_width="179dp"
        android:layout_height="0dp"
        android:text="Esqueci minha senha"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

</android.support.constraint.ConstraintLayout>
